#notifier{
	position: absolute;
	display: block;

	font-family: 'roboto', Arial, sans-serif;
	font-size: 13px;
	color: #000000;
}

.notif{
	position: relative;
	width: 342px;
	height: 70px;
	padding: 0px;
	-webkit-box-shadow: 0px 1px 3px #1b1b1b;
	-moz-box-shadow: 	0px 1px 3px #1b1b1b;
	 box-shadow: 		0px 1px 3px #1b1b1b;
	z-index: 9000;
}

.notif .text{
	/*float: left;*/
	margin-left: 10px;
	width: 80%;
}

.notif .text h5{
	font-size: 18px;
	font-weight: bold;
}

.notif .text p{
	margin-top: -5px;
        color: white;
        font-size: 12px;
}
.notif a {
    text-decoration: none;
    color: white;
}

.notif .close{
	position: absolute;
	top: -10px;
	right: -20px;
        opacity: 1;

	background: url('../../images/close.png') no-repeat;
	width: 24px;
	height: 24px;
	float: right;
	z-index: 9999;
}

.notif .close:hover{
	cursor: pointer;
        background-color: #fff !important;
}

/** Notification of Error **/

.notif.error{
	background-color:#2368b2;
	border: 2px solid #0063DC;
        
}

.notif.error .icon{
	background: url('../../images/notification.png') no-repeat;
	width: 48px;
	height: 48px;
	float: left;
        border-width: 0px 3px 0px 0px;
        border-style: solid;
        border-color: #4282c7;
        margin: 9px 11px 11px 11px;

}

/** Notification of Warning **/

